	langid = {english},
	note = {\_eprint: https://esajournals.onlinelibrary.wiley.com/doi/pdf/10.1890/{ES}10-00074.1},
	keywords = {biodiversity, divergence measures, diversity indices, diversity ordering, diversity profiles, evenness, goodness-of-fit statistics, Hill's diversity numbers, rare species, species abundance distribution},
	file = {Snapshot:C\:\\Users\\leroy\\Zotero\\storage\\AWR9ZIT3\\ES10-00074.html:text/html}
