	keywords = {geometric mean index, goodness-of-fit measures, long-term trends, rare species, 2020 targets, change points in trend, convention on biological diversity, diversity index, species diversity},
	file = {Snapshot:C\:\\Users\\leroy\\Zotero\\storage\\F5PPZQEL\\1365-2664.html:text/html}
