	volume = {22},
	issn = {1474-0001, 0959-2709},
	url = {https://www.cambridge.org/core/journals/bird-conservation-international/article/seabird-conservation-status-threats-and-priority-actions-a-global-assessment/29944BD8AA1EED41210B777389F34952#},
