	langid = {english},
	note = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2664.2008.01533.x},
	keywords = {habitat heterogeneity, Lepidoptera, selective logging, self-similarity, species-area relationships},
	file = {Snapshot:C\:\\Users\\leroy\\Zotero\\storage\\QU7V45E3\\j.1365-2664.2008.01533.html:text/html}
